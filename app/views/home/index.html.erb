<div id="input">
  <form action="<%= process_markdown_url %>" id="notepad_form" method="post">
    <textarea id="notepad" name="text"><%= @default_raw %></textarea>
    <span id="parser-container">Use <%= parser_select @default %></span>
  </form>
</div>
<div id="output" class="markdown"><%= raw(@default_html) %></div>
<textarea id="html-output"><%= @default_html %></textarea>
<div id="loading"></div>
<a id="toggle-output" href="javascript:;">Show HTML</a>